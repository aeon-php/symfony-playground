{% extends 'base.html.twig' %}

{% block title %}Form & Validation{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Aeon Calendar Form</h1>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        {{ form_start(form, {attr: {class: "form"}}) }}
                        <div class="row">
                            <div class="col-6">
                                <h2>Types</h2>
                                {{ form_row(form.day) }}
                                {{ form_row(form.datetime) }}
                                {{ form_row(form.time) }}
                                {{ form_row(form.timezone) }}
                                <hr />
                                <h2>Holidays</h2>
                                {{ form_row(form.holiday) }}
                                {{ form_row(form.not_holiday) }}
                                <hr />
                            </div>
                            <div class="col-6">
                                <h2>Comparison</h2>
                                <h5>First is before second</h5>
                                {{ form_row(form.datetime_compare_1) }}
                                {{ form_row(form.datetime_compare_2) }}
                            </div>
                        </div>
                        {{ form_row(form.submit) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
