{% extends 'base.html.twig' %}

{% block title %}Hello AeonCalendarController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Aeon Calendar</h1>

    <ul>
        <li>Current Year <code id="calendar-year">{{ calendar.currentYear.toString }}</code></li>
        <li>Current Month <code id="calendar-month">{{ calendar.currentMonth.toString }}</code></li>
        <li>Current Day <code id="calendar-day">{{ calendar.currentDay.toString }}</code></li>
        <li>Current DateTime <code id="calendar-datetime">{{ calendar.now.toISO8601 }}</code></li>
    </ul>
</div>
{% endblock %}
